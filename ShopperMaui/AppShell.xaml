<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShopperMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ShopperMaui.Views"
    Title="ShopperMaui">

    <TabBar>
        <ShellContent
            Title="Lista"
            Route="shoppingList"
            ContentTemplate="{DataTemplate views:ShoppingListView}" />
        <ShellContent
            Title="Przepisy"
            Route="recipesTab"
            ContentTemplate="{DataTemplate views:RecipesView}" />
        <ShellContent
            Title="Ustawienia"
            Route="settings"
            ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>

</Shell>
