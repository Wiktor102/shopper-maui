<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopperMaui.Controls.SortingButtonsControl"
             x:Name="SortingControl">
    <VerticalStackLayout Spacing="12">
        <Label Text="Sortuj po"
               Style="{StaticResource SectionHeader}"
               Margin="0,0,0,4" />
        <HorizontalStackLayout Spacing="8">
            <Button Text="Kategoria"
                    Command="{Binding Source={x:Reference SortingControl}, Path=SortByCategoryCommand}"
                    HeightRequest="36"
                    Padding="12,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource OutlineButton}">
                        <Style.Triggers>
                            <DataTrigger TargetType="Button"
                                         Binding="{Binding Source={x:Reference SortingControl}, Path=IsCategorySelected}"
                                         Value="True">
                                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                <Setter Property="TextColor" Value="White" />
                                <Setter Property="BorderWidth" Value="0" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Text="Nazwa"
                    Command="{Binding Source={x:Reference SortingControl}, Path=SortByNameCommand}"
                    HeightRequest="36"
                    Padding="12,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource OutlineButton}">
                        <Style.Triggers>
                            <DataTrigger TargetType="Button"
                                         Binding="{Binding Source={x:Reference SortingControl}, Path=IsNameSelected}"
                                         Value="True">
                                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                <Setter Property="TextColor" Value="White" />
                                <Setter Property="BorderWidth" Value="0" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Text="Ilość"
                    Command="{Binding Source={x:Reference SortingControl}, Path=SortByQuantityCommand}"
                    HeightRequest="36"
                    Padding="12,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource OutlineButton}">
                        <Style.Triggers>
                            <DataTrigger TargetType="Button"
                                         Binding="{Binding Source={x:Reference SortingControl}, Path=IsQuantitySelected}"
                                         Value="True">
                                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                <Setter Property="TextColor" Value="White" />
                                <Setter Property="BorderWidth" Value="0" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
