<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopperMaui.ViewModels"
             xmlns:controls="clr-namespace:ShopperMaui.Controls"
             x:Class="ShopperMaui.Controls.CategoryControl"
             x:DataType="vm:CategoryViewModel">
    <Border StrokeThickness="1"
            Stroke="{DynamicResource Primary}"
            StrokeShape="RoundRectangle 12"
            Padding="12"
            Margin="0,4">
        <VerticalStackLayout Spacing="12">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto"
                  ColumnSpacing="8"
                  VerticalOptions="Center">
                <Button Text="v"
                        Grid.Column="0"
                        Rotation="0"
                        Command="{Binding ToggleExpandCommand}"
                        WidthRequest="40"
                        HeightRequest="40">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button" Binding="{Binding IsExpanded}" Value="False">
                            <Setter Property="Text" Value=">" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>
                <Entry Grid.Column="1"
                       Text="{Binding Name, Mode=TwoWay}"
                       Placeholder="Kategoria"
                       FontAttributes="Bold"
                       HorizontalOptions="Fill" />
                <Button Grid.Column="2"
                        Text="+"
                        Command="{Binding AddProductCommand}"
                        SemanticProperties.Description="Dodaj produkt" />
                <Button Grid.Column="3"
                        Text="Usuń"
                        Command="{Binding DeleteCategoryCommand}"
                        SemanticProperties.Description="Usuń kategorię" />
            </Grid>

            <CollectionView IsVisible="{Binding IsExpanded}"
                            ItemsSource="{Binding Products}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <controls:ProductControl />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </Border>
</ContentView>
