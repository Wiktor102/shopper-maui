<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopperMaui.Controls.RecipeItemControl"
             x:Name="Root">
    <Border StrokeThickness="1"
            Stroke="{DynamicResource Secondary}"
            Padding="12"
            Margin="0,8"
            StrokeShape="RoundRectangle 12">
        <VerticalStackLayout Spacing="8">
                <Label Text="{Binding Recipe.Name, Source={x:Reference Root}}"
                   FontSize="18"
                   FontAttributes="Bold" />
                <Label Text="{Binding Recipe.Description, Source={x:Reference Root}}"
                   TextColor="Gray"
                   LineBreakMode="WordWrap" />
            <HorizontalStackLayout Spacing="8">
                <Button Text="Dodaj do listy"
                    Command="{Binding AddCommand, Source={x:Reference Root}}"
                    CommandParameter="{Binding Recipe, Source={x:Reference Root}}" />
                <Button Text="Edytuj"
                    Command="{Binding EditCommand, Source={x:Reference Root}}"
                    CommandParameter="{Binding Recipe, Source={x:Reference Root}}" />
                <Button Text="UsuÅ„"
                    Command="{Binding DeleteCommand, Source={x:Reference Root}}"
                    CommandParameter="{Binding Recipe, Source={x:Reference Root}}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Border>
</ContentView>
