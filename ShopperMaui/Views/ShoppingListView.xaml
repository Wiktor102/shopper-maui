<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopperMaui.ViewModels"
             xmlns:controls="clr-namespace:ShopperMaui.Controls"
             x:Class="ShopperMaui.Views.ShoppingListView"
             x:DataType="vm:MainViewModel"
             Title="Lista zakupów">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Eksportuj"
                     Command="{Binding ExportListCommand}" />
        <ToolbarItem Text="Importuj"
                     Command="{Binding ImportListCommand}" />
    </ContentPage.ToolbarItems>

    <Grid Padding="16" RowDefinitions="Auto,Auto,*" RowSpacing="12">
        <VerticalStackLayout Grid.Row="0" Spacing="8">
            <Label Text="{Binding Title}"
                   FontSize="Title"
                   FontAttributes="Bold" />
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}" />
        </VerticalStackLayout>

        <HorizontalStackLayout Grid.Row="1" Spacing="8">
            <Button Text="Dodaj kategorię"
                    Command="{Binding AddCategoryCommand}" />
            <Button Text="Dodaj produkt"
                Command="{Binding AddProductCommand}" />
            <Button Text="Zarządzaj kategoriami"
                    Command="{Binding ManageCategoriesCommand}" />
                <Button Text="Zarządzaj sklepami"
                    Command="{Binding ManageStoresCommand}" />
            <Button Text="Niezakupione"
                    Command="{Binding NavigateToUnpurchasedViewCommand}" />
            <Button Text="Przepisy"
                    Command="{Binding NavigateToRecipesCommand}" />
        </HorizontalStackLayout>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding VisibleCategories}"
                        SelectionMode="None"
                        IsVisible="{Binding HasVisibleCategories}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <controls:CategoryControl />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Border Grid.Row="2"
                Padding="24"
                StrokeThickness="0"
                BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                HorizontalOptions="Fill"
                VerticalOptions="Center"
                IsVisible="{Binding HasVisibleCategories, Converter={StaticResource InverseBooleanConverter}}">
            <VerticalStackLayout Spacing="8"
                                  HorizontalOptions="Center"
                                  VerticalOptions="Center">
                <Label Text="Brak produktów na liście"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
                <Label Text="Dodaj kategorię i pierwszy produkt, aby rozpocząć planowanie zakupów."
                       Opacity="0.75"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
