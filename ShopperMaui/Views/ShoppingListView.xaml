<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopperMaui.ViewModels"
             xmlns:controls="clr-namespace:ShopperMaui.Controls"
             x:Class="ShopperMaui.Views.ShoppingListView"
             x:DataType="vm:MainViewModel"
             Title="Lista zakupów">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Eksportuj"
                     Command="{Binding ExportListCommand}" />
        <ToolbarItem Text="Importuj"
                     Command="{Binding ImportListCommand}" />
    </ContentPage.ToolbarItems>

    <Grid Padding="16" RowDefinitions="Auto,Auto,*" RowSpacing="12">
        <VerticalStackLayout Grid.Row="0" Spacing="8">
            <Label Text="{Binding Title}"
                   FontSize="Title"
                   FontAttributes="Bold" />
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red">
                <Label.Triggers>
                    <DataTrigger TargetType="Label" Binding="{Binding ErrorMessage}" Value="">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                </Label.Triggers>
            </Label>
        </VerticalStackLayout>

        <HorizontalStackLayout Grid.Row="1" Spacing="8">
            <Button Text="Dodaj kategorię"
                    Command="{Binding AddCategoryCommand}" />
            <Button Text="Niepurchasowane"
                    Command="{Binding NavigateToUnpurchasedViewCommand}" />
            <Button Text="Przepisy"
                    Command="{Binding NavigateToRecipesCommand}" />
        </HorizontalStackLayout>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Categories}"
                        SelectionMode="None"
                        EmptyView="Brak kategorii. Dodaj pierwszą!">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <controls:CategoryControl />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
