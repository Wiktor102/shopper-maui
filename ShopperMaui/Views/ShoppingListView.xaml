<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopperMaui.ViewModels"
             xmlns:controls="clr-namespace:ShopperMaui.Controls"
             x:Class="ShopperMaui.Views.ShoppingListView"
             x:DataType="vm:MainViewModel"
             Title="Lista zakupów">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Niezakupione"
                     Command="{Binding NavigateToUnpurchasedViewCommand}" />
        <ToolbarItem Text="Eksportuj"
                     Command="{Binding ExportListCommand}"
                     Order="Secondary"/>
        <ToolbarItem Text="Importuj"
                     Command="{Binding ImportListCommand}"
                     Order="Secondary"/>
    </ContentPage.ToolbarItems>

    <Grid Padding="16" RowDefinitions="Auto,*,Auto" RowSpacing="12">
        <VerticalStackLayout Grid.Row="0" Spacing="8">
            <Label Text="{Binding ErrorMessage}"
                   TextColor="{StaticResource Danger}"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}" />
        </VerticalStackLayout>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding VisibleCategories}"
                        SelectionMode="None"
                        IsVisible="{Binding HasVisibleCategories}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <controls:CategoryControl />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Border Grid.Row="1"
                Style="{StaticResource CardBorder}"
                HorizontalOptions="Fill"
                VerticalOptions="Center"
                IsVisible="{Binding HasVisibleCategories, Converter={StaticResource InverseBooleanConverter}}">
            <VerticalStackLayout Spacing="8"
                                  HorizontalOptions="Center"
                                  VerticalOptions="Center">
                <Label Text="Brak produktów na liście"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
                <Label Text="Dodaj kategorię i pierwszy produkt, aby rozpocząć planowanie zakupów."
                       Opacity="0.75"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </Border>

        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="12">
            <Button Grid.Column="0"
                    Text="Dodaj kategorię"
                    Command="{Binding AddCategoryCommand}"
                    Style="{StaticResource SecondaryButton}"/>
            <Button Grid.Column="1"
                    Text="Dodaj produkt"
                    Command="{Binding AddProductCommand}" />
        </Grid>
    </Grid>
</ContentPage>
