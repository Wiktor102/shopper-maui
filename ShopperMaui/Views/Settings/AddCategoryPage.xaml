<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopperMaui.ViewModels"
             x:Class="ShopperMaui.Views.AddCategoryPage"
             x:DataType="vm:AddCategoryViewModel"
             Title="Dodaj kategorię">
    <VerticalStackLayout Padding="16" Spacing="24">
        <VerticalStackLayout Spacing="8">
            <Label Text="Nazwa kategorii" Style="{StaticResource SectionHeader}" Margin="0"/>
            <Entry Text="{Binding CategoryName}" Placeholder="np. Nabiał" />
            <Label Text="{Binding ErrorMessage}"
                   TextColor="{StaticResource Danger}"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}" />
        </VerticalStackLayout>

        <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
            <Button Grid.Column="0" Text="Anuluj" Command="{Binding CancelCommand}" Style="{StaticResource SecondaryButton}" />
            <Button Grid.Column="1" Text="Zapisz" Command="{Binding SaveCategoryCommand}" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>
