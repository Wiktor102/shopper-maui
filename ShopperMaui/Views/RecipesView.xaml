<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopperMaui.ViewModels"
             xmlns:controls="clr-namespace:ShopperMaui.Controls"
             x:Class="ShopperMaui.Views.RecipesView"
             x:DataType="vm:RecipesViewModel"
             Title="Przepisy">
    <Grid Padding="16" RowDefinitions="*,Auto">
        <CollectionView x:Name="RecipesCollection"
                        ItemsSource="{Binding Recipes}"
                        SelectionMode="None"
                        EmptyView="Brak przepisÃ³w">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <controls:RecipeItemControl Recipe="{Binding .}"
                                                AddCommand="{Binding BindingContext.AddRecipeToListCommand, Source={x:Reference RecipesCollection}}"
                                                EditCommand="{Binding BindingContext.EditRecipeCommand, Source={x:Reference RecipesCollection}}"
                                                DeleteCommand="{Binding BindingContext.DeleteRecipeCommand, Source={x:Reference RecipesCollection}}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Grid.Row="1"
                Margin="0,12,0,0"
                Text="Dodaj przepis"
                Command="{Binding AddRecipeCommand}"
                HorizontalOptions="Fill" />
    </Grid>
</ContentPage>
