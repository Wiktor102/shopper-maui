<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopperMaui.ViewModels"
             xmlns:controls="clr-namespace:ShopperMaui.Controls"
             x:Class="ShopperMaui.Views.StoreListView"
             x:DataType="vm:StoreListViewModel"
             Title="Widok sklepu">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Filtruj po sklepie"
               Style="{StaticResource SectionHeader}"
               Margin="0,0,0,4" />
        <Picker ItemsSource="{Binding AvailableStores}"
                SelectedItem="{Binding SelectedStore}"
                Title="Sklep" />

        <Label Text="Sortuj po" Style="{StaticResource SectionHeader}" Margin="0,8,0,4" />
        <HorizontalStackLayout Spacing="8">
            <Button Text="Kategoria" Command="{Binding SortByCategoryCommand}" Style="{StaticResource OutlineButton}" HeightRequest="36" Padding="12,0"/>
            <Button Text="Nazwa" Command="{Binding SortByNameCommand}" Style="{StaticResource OutlineButton}" HeightRequest="36" Padding="12,0"/>
            <Button Text="Ilość" Command="{Binding SortByQuantityCommand}" Style="{StaticResource OutlineButton}" HeightRequest="36" Padding="12,0"/>
        </HorizontalStackLayout>

        <CollectionView ItemsSource="{Binding FilteredProducts}"
                        SelectionMode="None"
                        EmptyView="Brak produktów dla wybranego sklepu.">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <controls:ProductControl />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
