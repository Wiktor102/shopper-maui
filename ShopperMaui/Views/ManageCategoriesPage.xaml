<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopperMaui.ViewModels"
             x:Class="ShopperMaui.Views.ManageCategoriesPage"
             x:DataType="vm:ManageCategoriesViewModel"
             Title="Kategorie">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Dodaj"
                     Command="{Binding AddCategoryCommand}" />
    </ContentPage.ToolbarItems>

    <Grid Padding="16">
        <CollectionView ItemsSource="{Binding Categories}"
                        SelectionMode="None"
                        IsVisible="{Binding HasCategories}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="12" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:CategoryViewModel">
                    <Border Style="{StaticResource CardBorder}">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                            <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                <Entry Text="{Binding Name}"
                                       Placeholder="Nazwa kategorii"
                                       FontAttributes="Bold"
                                       FontSize="16" />
                                <Label Text="{Binding ProductSummary}"
                                       FontSize="12"
                                       TextColor="{StaticResource TextSecondary}" />
                            </VerticalStackLayout>
                            <Button Grid.Column="1"
                                    Text="Usuń"
                                    Command="{Binding DeleteCategoryCommand}"
                                    Style="{StaticResource DangerButton}"
                                    WidthRequest="80"
                                    HeightRequest="36"
                                    Padding="0"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Border Style="{StaticResource CardBorder}"
                HorizontalOptions="Fill"
                VerticalOptions="Center"
                IsVisible="{Binding HasCategories, Converter={StaticResource InverseBooleanConverter}}">
            <VerticalStackLayout Spacing="8"
                                  HorizontalOptions="Center"
                                  VerticalOptions="Center">
                <Label Text="Brak kategorii"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
                <Label Text="Dodaj pierwszą kategorię, aby zacząć budować listę zakupów."
                       Opacity="0.75"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
