<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopperMaui.ViewModels"
             x:Class="ShopperMaui.Views.AddCategoryPage"
             x:DataType="vm:AddCategoryViewModel"
             Title="Dodaj kategorię">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Nazwa kategorii" />
        <Entry Text="{Binding CategoryName}" Placeholder="np. Nabiał" />
        <Label Text="{Binding ErrorMessage}"
               TextColor="Red"
               IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}" />
        <Button Text="Zapisz" Command="{Binding SaveCategoryCommand}" />
        <Button Text="Anuluj" Command="{Binding CancelCommand}" />
    </VerticalStackLayout>
</ContentPage>
