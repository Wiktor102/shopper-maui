<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopperMaui.ViewModels"
             xmlns:controls="clr-namespace:ShopperMaui.Controls"
             x:Class="ShopperMaui.Views.UnpurchasedListView"
             x:DataType="vm:UnpurchasedListViewModel"
             Title="Niezakupione">
    <Grid Padding="0"
            RowDefinitions="Auto,*"
            ColumnDefinitions="*">
        <VerticalStackLayout Grid.Row="0"
                Padding="16"
                Spacing="12">
            <controls:SortingButtonsControl
                CurrentSorting="{Binding CurrentSorting}"
                SortByCategoryCommand="{Binding SortByCategoryCommand}"
                SortByNameCommand="{Binding SortByNameCommand}"
                SortByQuantityCommand="{Binding SortByQuantityCommand}" />
        </VerticalStackLayout>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding UnpurchasedProducts}"
                        EmptyView="Wszystkie produkty zostaÅ‚y kupione!"
                        SelectionMode="None"
                        Margin="16,0">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"
                        ItemSpacing="8"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <controls:ProductControl/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
