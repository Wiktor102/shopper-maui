<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopperMaui.ViewModels"
             xmlns:controls="clr-namespace:ShopperMaui.Controls"
             x:Class="ShopperMaui.Views.UnpurchasedListView"
             x:DataType="vm:UnpurchasedListViewModel"
             Title="Niezakupione">
    <Grid Padding="0"
            RowDefinitions="Auto,*"
            ColumnDefinitions="*">
        <VerticalStackLayout Grid.Row="0"
                Padding="16"
                Spacing="12">
            <Label Text="Sortuj po"
                    Style="{StaticResource SectionHeader}"
                    Margin="0,0,0,4"/>
            <HorizontalStackLayout Spacing="8">
                <Button Text="Kategoria"
                        Command="{Binding SortByCategoryCommand}"
                        Style="{StaticResource OutlineButton}"
                        HeightRequest="36"
                        Padding="12,0"/>
                <Button Text="Nazwa"
                        Command="{Binding SortByNameCommand}"
                        Style="{StaticResource OutlineButton}"
                        HeightRequest="36"
                        Padding="12,0"/>
                <Button Text="Ilość"
                        Command="{Binding SortByQuantityCommand}"
                        Style="{StaticResource OutlineButton}"
                        HeightRequest="36"
                        Padding="12,0"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding UnpurchasedProducts}"
                        EmptyView="Wszystkie produkty zostały kupione!"
                        SelectionMode="None"
                        Margin="16,0">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"
                        ItemSpacing="8"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <controls:ProductControl/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
