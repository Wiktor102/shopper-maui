<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopperMaui.ViewModels"
             x:Class="ShopperMaui.Views.AddEditRecipePage"
             x:DataType="vm:AddEditRecipeViewModel"
             Title="Przepis">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="24">
            <VerticalStackLayout Spacing="8">
                <Label Text="Nazwa przepisu" Style="{StaticResource SectionHeader}" Margin="0"/>
                <Entry Text="{Binding RecipeName}" Placeholder="Nazwa przepisu" />
            </VerticalStackLayout>
            
            <VerticalStackLayout Spacing="8">
                <Label Text="Opis" Style="{StaticResource SectionHeader}" Margin="0"/>
                <Editor Text="{Binding RecipeDescription}" Placeholder="Opis" AutoSize="TextChanges" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="Instrukcje" Style="{StaticResource SectionHeader}" Margin="0"/>
                <Editor Text="{Binding RecipeDirections}" Placeholder="Kroki przygotowania" AutoSize="TextChanges"/>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="Składniki" Style="{StaticResource SectionHeader}" Margin="0"/>
                <CollectionView x:Name="IngredientsCollection"
                                ItemsSource="{Binding Ingredients}"
                                SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="vm:RecipeIngredientViewModel">
                            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,8">
                                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto,Auto" RowSpacing="8" ColumnSpacing="8">
                                    <Entry Grid.Row="0" Grid.Column="0" Text="{Binding ProductName}" Placeholder="Nazwa składnika" />
                                    <Entry Grid.Row="0" Grid.Column="1" Text="{Binding Quantity}" Keyboard="Numeric" />
                                    <Picker Grid.Row="0" Grid.Column="2" ItemsSource="{Binding AvailableUnits}"
                                            SelectedItem="{Binding Unit}" />
                                    <Entry Grid.Row="1" Grid.Column="0" Text="{Binding CategoryName}" Placeholder="Kategoria" />
                                    <Button Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="Usuń"
                                            Command="{Binding BindingContext.RemoveIngredientCommand, Source={x:Reference IngredientsCollection}}"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource DangerButton}"
                                            HorizontalOptions="Fill"
                                            HeightRequest="36"
                                            Padding="12,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Button Text="Dodaj składnik"
                        Command="{Binding AddIngredientCommand}"
                        Style="{StaticResource SecondaryButton}" />
            </VerticalStackLayout>

            <Label Text="{Binding ErrorMessage}"
                   TextColor="{StaticResource Danger}"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,24,0,0">
                <Button Grid.Column="0" Text="Anuluj" Command="{Binding CancelCommand}" Style="{StaticResource SecondaryButton}" />
                <Button Grid.Column="1" Text="Zapisz" Command="{Binding SaveRecipeCommand}" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
